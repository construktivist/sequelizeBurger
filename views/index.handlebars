<h1>Eat Da Burger!</h1>

<h2>Burgers to Eat:</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burger/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="notEaten" value="true">
          <button type="submit">Eat Da Burger!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{burger_name}}

        <form action="burger/update/{{this.id}}?_method=PUT" method="POST">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add some Burgers!</h2>
<form class="create-update-form" action="burger/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
